<div class="flex flex-col items-center text-2xl gap-2 py-2">
    <h1 class="font-bold text-3xl mb-4">Board: <%= @board.name %></h1>
    <p class="text-sm text-gray-500 mb-2">Created by: <%= @board.email %></p>
    <p class="mb-4">Width: <%= @board.width %>, Height: <%= @board.height %>, Mines: <%= @board.mines %></p>
    <div class="border border-gray-300 rounded shadow p-4">
      <% @board.cells.split("\n").map { |row| row.chars }.each do |row| %>
        <div class="flex cells">
          <% row.each do |cell| %>
            <div class="<%= cell == '1' ? 'bg-white-400 mines' : 'bg-slate-300' %> w-6 h-6 m-1 flex items-center justify-center boards">
              <%= cell == '1' ? 'ğŸ’£' : '' %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= link_to 'Back', boards_path, class: 'mt-4 text-blue-500' %>
  </div>
